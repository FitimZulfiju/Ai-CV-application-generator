<MudDialog>
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.Filled.Help" Class="mr-2" />
            <MudText Typo="Typo.h6">@Localizer["HowItWorksGuide"]</MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-4">
            <!-- Tab 1: Workflow -->
            <MudTabPanel Text="@Localizer["HowItWorks"]" Icon="@Icons.Material.Filled.Work">
                <MudTimeline TimelineOrientation="TimelineOrientation.Vertical"
                    TimelinePosition="TimelinePosition.Start">
                    <MudTimelineItem Color="Color.Primary" Size="Size.Medium">
                        <ItemOpposite>
                            <MudText Color="Color.Primary" Typo="Typo.h6">@Localizer["Step1"]</MudText>
                        </ItemOpposite>
                        <ItemContent>
                            <MudText Typo="Typo.h6">@Localizer["BuildMasterCv"]</MudText>
                            <MudText Typo="Typo.body2">
                                @((MarkupString)Localizer["BuildMasterCvDescription"].Value.Replace("Profile",
                                $"<strong>{Localizer["Profile"]}</strong>"))
                            </MudText>
                        </ItemContent>
                    </MudTimelineItem>

                    <MudTimelineItem Color="Color.Warning" Size="Size.Medium">
                        <ItemOpposite>
                            <MudText Color="Color.Warning" Typo="Typo.h6">@Localizer["Step2"]</MudText>
                        </ItemOpposite>
                        <ItemContent>
                            <MudText Typo="Typo.h6">@Localizer["ConnectAiKeys"]</MudText>
                            <MudText Typo="Typo.body2">
                                @((MarkupString)Localizer["ConnectAiKeysDescription"].Value.Replace("Settings",
                                $"<strong>{Localizer["Settings"]}</strong>"))
                            </MudText>
                        </ItemContent>
                    </MudTimelineItem>

                    <MudTimelineItem Color="Color.Secondary" Size="Size.Medium">
                        <ItemOpposite>
                            <MudText Color="Color.Secondary" Typo="Typo.h6">@Localizer["Step3"]</MudText>
                        </ItemOpposite>
                        <ItemContent>
                            <MudText Typo="Typo.h6">@Localizer["GenerateApplication"]</MudText>
                            <MudText Typo="Typo.body2">
                                @((MarkupString)Localizer["GenerateApplicationDescription"].Value.Replace("Generate",
                                $"<strong>{Localizer["Generate"]}</strong>"))
                            </MudText>
                        </ItemContent>
                    </MudTimelineItem>
                </MudTimeline>
            </MudTabPanel>

            <!-- Tab 2: Formatting -->
            <MudTabPanel Text="@Localizer["HtmlFormatting"]" Icon="@Icons.Material.Filled.FormatBold">
                <MudAlert Severity="Severity.Info" Class="mb-4">
                    @Localizer["HtmlFormattingDescription"]
                </MudAlert>

                <MudTable Items="FormattingExamples" Hover="true" Breakpoint="Breakpoint.None" Dense="true">
                    <HeaderContent>
                        <MudTh>@Localizer["Description"]</MudTh>
                        <MudTh>@Localizer["CodeToWrite"]</MudTh>
                        <MudTh>@Localizer["ResultPreview"]</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd>@context.Description</MudTd>
                        <MudTd>
                            <MudText
                                Style="font-family:monospace; background:#f5f5f5; padding:2px 4px; border-radius:4px;">
                                @context.Code
                            </MudText>
                        </MudTd>
                        <MudTd>
                            <FormattedText Text="@context.Preview" />
                        </MudTd>
                    </RowTemplate>
                </MudTable>
            </MudTabPanel>
        </MudTabs>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Variant="Variant.Filled" Color="Color.Primary">@Localizer["GotIt"]</MudButton>
    </DialogActions>
</MudDialog>
