@if (Profile == null)
{
    <MudAlert Severity="Severity.Warning">@Localizer["NoProfileData"]</MudAlert>
}
else
{
    <div class="cv-container cover-letter">
        <div class="container">
            <div class="page">
                <!-- Header Section (Same as CV) -->
                <header class="header">

                    <div class="header-text">
                        <h1 class="name">
                            <FormattedText Text="@Profile.FullName" />
                        </h1>
                        <h2 class="title">
                            <FormattedText Text="@Profile.Title" />
                        </h2>
                        <div class="contact-info-wrapper">
                            @Localizer["EmailLabel"] <a href="mailto:@Profile.Email"><FormattedText Text="@Profile.Email" /></a> |
                            @Localizer["PhoneLabel"] <FormattedText Text="@Profile.PhoneNumber" />
                            | @Localizer["LocationLabel"]
                            <FormattedText Text="@Profile.Location" /><br>
                            @Localizer["LinkedInLabel"] <a href="@Profile.LinkedInUrl"
                                                           target="_blank"><FormattedText Text="@Profile.LinkedInUrl" /></a>
                        </div>
                    </div>
                </header>

                <!-- Cover Letter Body -->
                <section class="section">
                    <div class="summary"
                         style="white-space: pre-wrap; font-family: 'Segoe UI', sans-serif; font-size: 1em; line-height: 1.8;">
                        <FormattedText Text="@LetterContent" />
                    </div>
                </section>
                <!-- This footer could be a good point if in future the application is extended to include a subscription model -->
                <!-- Footer -->
                <!-- <footer class="footer">
                                                            <p>Generated by AiCV</p>
                                                        </footer> -->
            </div>
        </div>
    </div>
}
