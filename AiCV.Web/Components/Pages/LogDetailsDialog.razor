<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudTextField Label="@Localizer["Timestamp"]" Value="@Log.Timestamp.ToString("G")" ReadOnly="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField Label="@Localizer["Level"]" Value="@Log.Level" ReadOnly="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField Label="@Localizer["UserId"]" Value="@Log.UserId" ReadOnly="true" />
            </MudItem>
            <MudItem xs="12" md="6">
                <MudTextField Label="@Localizer["Path"]" Value="@Log.RequestPath" ReadOnly="true" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField Label="@Localizer["Source"]" Value="@Log.Source" ReadOnly="true" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField Label="@Localizer["Message"]" Value="@Log.Message" Lines="2" ReadOnly="true" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField Label="@Localizer["Stacktrace"]" Value="@Log.StackTrace" Lines="15" ReadOnly="true"
                    Style="font-family: monospace;" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@Localizer["Close"]</MudButton>
    </DialogActions>
</MudDialog>
