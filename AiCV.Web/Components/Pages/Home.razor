@page "/"

<PageTitle>@Localizer["WelcomeMessage"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.False" Class="pa-4">

    <MudGrid Spacing="3" Class="d-flex justify-center align-center" Justify="Justify.Center">
        <MudItem xs="12" md="6" Class="d-flex justify-center">
            <MudImage Src="/logoSloganSvg.svg" Alt="AI Web CV Logo" Style="max-width: 30%; height: auto;" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudText Typo="Typo.h3" Align="Align.Center" Style="font-weight: 700;">
                @Localizer["WelcomeTo"]<br>
                @Localizer["CvAndCoverLetter"]<br>
                @Localizer["Generator"]
            </MudText>
            <MudText Typo="Typo.h5" Align="Align.Center" Class="mt-2" Color="Color.Secondary">
                @Localizer["AiPoweredCareerAssistant"]
            </MudText>
            <MudStack Row="true" Justify="Justify.Center" Class="mt-4">
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Help"
                    OnClick="OpenUserGuideDialog">
                    @Localizer["HowItWorks"]
                </MudButton>
            </MudStack>
        </MudItem>
    </MudGrid>

    <MudDivider DividerType="DividerType.FullWidth" Class="my-8" />

    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="4" Class="pa-4 hover-card" @onclick="@(() => Navigation.NavigateTo($"/{NavUri.ProfilePage}"))"
                Style="cursor: pointer; height: 100%;">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" Color="Color.Primary" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@Localizer["ManageProfile"]</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@Localizer["ProfileCardDescription"]</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/profile">@Localizer["GoToProfile"]</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="4" Class="pa-4 hover-card" @onclick="@(() => Navigation.NavigateTo($"/{NavUri.GeneratePage}"))"
                Style="cursor: pointer; height: 100%;">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Large" Color="Color.Secondary" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@Localizer["GenerateApplication"]</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@Localizer["GenerateCardDescription"]</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Secondary" Href="/generate">@Localizer["StartGenerating"]
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="4" Class="pa-4 hover-card" @onclick="OpenSampleCvDialog"
                Style="cursor: pointer; height: 100%;">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Size="Size.Large" Color="Color.Info" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@Localizer["ViewSampleCv"]</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>@Localizer["SampleCvCardDescription"]</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Info" OnClick="OpenSampleCvDialog">@Localizer["ViewSampleCv"]
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudDivider DividerType="DividerType.FullWidth" Class="mt-16 mb-8" />

    <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="2" Class="mb-8">
        <MudText Typo="Typo.body2" Color="Color.Secondary" Style="opacity: 0.7;">
            @Localizer["DevelopedBy"] <b>Fitim Zulfiju</b>
        </MudText>
        <MudStack Row="true" Spacing="4" Justify="Justify.Center">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Size="Size.Small"
                Href="https://github.com/fitimzulfiu" Target="_blank" title="GitHub" />
            <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Primary" Size="Size.Small"
                Href="https://linkedin.com/in/[your-profile]" Target="_blank" title="LinkedIn" />
            <MudIconButton Icon="@DockerIcon" Color="Color.Info" Size="Size.Small"
                Href="https://hub.docker.com/r/timi74/aicv" Target="_blank" title="Docker Hub" />
            <MudIconButton Icon="@Icons.Material.Filled.Email" Color="Color.Secondary" Size="Size.Small"
                Href="mailto:[your-email@example.com]" title="Email" />
        </MudStack>
        <MudText Typo="Typo.caption" Color="Color.Secondary" Style="opacity: 0.5;">v @AppVersion</MudText>
    </MudStack>
</MudContainer>

