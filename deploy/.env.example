# General Configuration
DOMAIN=example.com
SUBDOMAIN=cv
TUNNEL_NAME=aicv-tunnel
TUNNEL_ID=your-cloudflare-tunnel-id
CF_API_TOKEN=your-cloudflare-api-token
CLOUDFLARED_MOUNT_DIR=/path/to/cloudflared/config
WATCHTOWER_HTTP_API_TOKEN=your-watchtower-token

# Docker Configuration
DOCKER_REPOSITORY=your-docker-repo/aicv
IMAGE_TAG=latest
DOCKER_GROUP=docker
APP_CONTAINER_NAME=aicv-app
APP_PORT=8080
COMPOSE_NETWORK=deploy_aicvapp_default

# Application Configuration
APP_BASE_DIR=/path/to/app/base/dir
DEPLOY_USER=your-linux-username
HOST_BACKUPS_DIR=/path/to/backups
HOST_STATIC_IMAGES_DIR=/path/to/static/images
PORT_CLEANUP_LIST="8080 5432 1433"

# Database Configuration (PostgreSQL or SqlServer)
DB_PROVIDER=SqlServer
DB_SERVER=shared-sqlserver
DB_NAME=AiCV_db
DB_USER=sa
DB_PASSWORD=your-secure-password
PG_PORT=5432
SHARED_SQL_DIR=/path/to/shared-sql

# Authentication Providers (Leave empty if not used)
Authentication__Google__ClientId=
Authentication__Google__ClientSecret=
Authentication__Microsoft__ClientId=
Authentication__Microsoft__ClientSecret=
Authentication__GitHub__ClientId=
Authentication__GitHub__ClientSecret=
